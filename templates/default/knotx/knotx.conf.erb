<%- extend Knotx::ResourceHelpers %>
<%- if systemd_available? %>
#
# !! This is not bash file. This is systemd EnvironmentFile !!
#
<%- else %>
#!/bin/bash
<%- end %>

# Knotx general attributes

KNOTX_CONFIG="-conf <%= @knotx_app_config_path %>"
KNOTX_CONFIG_EXTRA="<%= @knotx_app_config_extra %>"

# Knotx JVM attributes

KNOTX_MIN_HEAP=<%= @min_heap %>
KNOTX_MAX_HEAP=<%= @max_heap %>
KNOTX_CODE_CACHE=<%= @code_cache %>
KNOTX_PORT=<%= @port %>
KNOTX_EXTRA_OPTS=<%= @extra_opts %>

KNOTX_GENERAL_OPTS="-Djava.net.preferIPv4Stack=true"

KNOTX_GC_OPTS=" <%= @gc_opts %> -Xloggc:<%= @knotx_log_dir %>/<%= @knotx_id %>/gc.log -XX:+PrintGCApplicationStoppedTime -XX:+PrintGCApplicationConcurrentTime -XX:+PrintGC -XX:+PrintGCTimeStamps -XX:+PrintGCDetails -XX:+UseGCLogFileRotation -XX:NumberOfGCLogFiles=10 -XX:GCLogFileSize=5M"

<%- if @jmx_enabled == true -%>

<%- 
  if @jmx_security_enabled == true
    jmx_auth = "-Dcom.sun.management.jmxremote.authenticate=true " \
      "-Dcom.sun.management.jmxremote.password.file=#{@jvm_security_password_config_path} " \
      "-Dcom.sun.management.jmxremote.access.file=#{@jvm_security_access_config_path}"
  else
 	jmx_auth = "-Dcom.sun.management.jmxremote.authenticate=false"
  end
-%>

KNOTX_JMX_OPTS="-Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=<%= @jmx_port %> -Dcom.sun.management.jmxremote.rmi.port=<%= @jmx_port %> -Djava.rmi.server.hostname=<%= @jmx_ip %> -Dcom.sun.management.jmxremote.ssl=false <%= jmx_auth %>"

<%- end -%>

<%- if @debug_enabled == true -%>
KNOTX_DEBUG_OPTS="-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=<%= @debug_port %>"
<%- end -%>
